<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Personal Information"
        android:key="personal_category">

        <EditTextPreference
            android:key="name_field"
            android:title="Nombre de Usuario"
            android:summary="Ingrese su nombre de Usuario"
            android:dialogTitle="Tu usernsme..."
            android:dialogMessage="Ingrese su nombre de Usuario"
            android:defaultValue=" "
            android:inputType="textCapWords">

        </EditTextPreference>


    </PreferenceCategory>

    <PreferenceCategory
        android:title="Ordenamiento"
        android:key="order_category">

        <ListPreference
            android:key="order_field"
            android:title="Orden de los elementos"
            android:entries="@array/order_field"
            android:entryValues="@array/order_values"
            android:defaultValue="id">

        </ListPreference>

    </PreferenceCategory>

</PreferenceScreen>