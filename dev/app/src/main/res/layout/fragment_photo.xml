<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.FragmentPhoto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageViewPhoto"
        android:layout_above="@+id/relativeLayoutComentarios">

    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/relativeLayoutComentarios"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:id="@+id/linearLayoutPhotos"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageButton
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:id="@+id/imageButtonComments"
                android:src="@drawable/ic_comments">

            </ImageButton>

            <ImageButton
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:id="@+id/imageButtonEmail"
                android:src="@drawable/ic_email">

            </ImageButton>

            <TextView
                android:id="@+id/textViewSwipeComments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Tap and hold the image for options">

            </TextView>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>